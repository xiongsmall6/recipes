<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="foodVm"
            type="com.xiong.recipes.ui.detail.FoodDetailViewModel" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.detail.FoodDetailFragment">

        <com.xiong.recipes.ui.view.HeadView
            android:id="@+id/detail_head"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/line_gray"
            app:center_text_visible="true"
            app:center_text_color="@color/homeColor"
            app:right_img_visible="false"
            app:left_text_visible="false"
            />
        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="45dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/food_detail_image"
                    android:scaleType="centerInside"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{foodVm.foodInfo}"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/material_title"
                        android:src="@drawable/title_cicle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_toRightOf="@id/material_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/homeColor"
                        android:text="食材明细"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/material_recycle"
                    android:background="@drawable/shape_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/step_title"
                        android:src="@drawable/title_cicle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_toRightOf="@id/step_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/homeColor"
                        android:text="@{foodVm.foodName+@string/step}"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/step_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</layout>
